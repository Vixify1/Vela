@{
    ViewData["Title"] = "Dashboard";
    Layout = "_DashboardLayout";
}

<div class="dashboard-content">
    <!-- Welcome Header -->
    <div class="welcome-header">
        <h1>Welcome to Your Dashboard</h1>
        <p class="text-muted">Here's an overview of your HR activities and key metrics.</p>
    </div>

    <!-- Stats Cards Row -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="stat-card stat-card-primary">
                <div class="stat-icon">
                    <i class="fas fa-users"></i>
                </div>
                <div class="stat-content">
                    <h3>@ViewBag.TotalEmployees</h3>
                    <p>Total Employees</p>
                </div>
            </div>
        </div>
        
        <div class="col-md-3">
            <div class="stat-card stat-card-success">
                <div class="stat-icon">
                    <i class="fas fa-user-check"></i>
                </div>
                <div class="stat-content">
                    <h3>@ViewBag.ActiveEmployees</h3>
                    <p>Active Employees</p>
                </div>
            </div>
        </div>
        
        <div class="col-md-3">
            <div class="stat-card stat-card-info">
                <div class="stat-icon">
                    <i class="fas fa-clock"></i>
                </div>
                <div class="stat-content">
                    <h3>@ViewBag.TodayAttendance</h3>
                    <p>Today's Check-ins</p>
                </div>
            </div>
        </div>
        
        <div class="col-md-3">
            <div class="stat-card stat-card-warning">
                <div class="stat-icon">
                    <i class="fas fa-calendar-week"></i>
                </div>
                <div class="stat-content">
                    <h3>@DateTime.Now.ToString("MMM")</h3>
                    <p>Current Month</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Dashboard Content -->
    <div class="row">
        <!-- Quick Actions Card -->
        <div class="col-lg-6">
            <div class="dashboard-card">
                <div class="card-header">
                    <h5>Quick Actions</h5>
                </div>
                <div class="card-body">
                    <div class="quick-actions">
                        <a href="@Url.Action("Index", "TimeClock")" class="action-item">
                            <div class="action-icon bg-primary">
                                <i class="fas fa-clock"></i>
                            </div>
                            <div class="action-content">
                                <h6>Clock In/Out</h6>
                                <p>Track your work hours</p>
                            </div>
                        </a>
                        
                        <a href="@Url.Action("MonthlyDetails", "TimeClock")" class="action-item">
                            <div class="action-icon bg-info">
                                <i class="fas fa-chart-bar"></i>
                            </div>
                            <div class="action-content">
                                <h6>View Attendance</h6>
                                <p>Check your attendance history</p>
                            </div>
                        </a>
                        
                        <a href="@Url.Action("Index", "UserProfile")" class="action-item">
                            <div class="action-icon bg-success">
                                <i class="fas fa-user-edit"></i>
                            </div>
                            <div class="action-content">
                                <h6>Update Profile</h6>
                                <p>Manage your information</p>
                            </div>
                        </a>
                        
                        @if (User.IsInRole("Admin"))
                        {
                            <a href="@Url.Action("Index", "Employee")" class="action-item">
                                <div class="action-icon bg-warning">
                                    <i class="fas fa-users-cog"></i>
                                </div>
                                <div class="action-content">
                                    <h6>Manage Employees</h6>
                                    <p>Add or edit employee records</p>
                                </div>
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Recent Activity Card -->
        <div class="col-lg-6">
            <div class="dashboard-card">
                <div class="card-header">
                    <h5>Recent Activity</h5>
                </div>
                <div class="card-body">
                    <div class="activity-list">
                        <div class="activity-item">
                            <div class="activity-icon bg-success">
                                <i class="fas fa-sign-in-alt"></i>
                            </div>
                            <div class="activity-content">
                                <p>You logged into the system</p>
                                <small class="text-muted">Just now</small>
                            </div>
                        </div>
                        
                        <div class="activity-item">
                            <div class="activity-icon bg-info">
                                <i class="fas fa-calendar"></i>
                            </div>
                            <div class="activity-content">
                                <p>New month started - @DateTime.Now.ToString("MMMM yyyy")</p>
                                <small class="text-muted">@(DateTime.Now.Day == 1 ? "Today" : $"{DateTime.Now.Day} days ago")</small>
                            </div>
                        </div>
                        
                        <div class="activity-item">
                            <div class="activity-icon bg-primary">
                                <i class="fas fa-clock"></i>
                            </div>
                            <div class="activity-content">
                                <p>Time tracking is available</p>
                                <small class="text-muted">Always active</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Additional Information Row -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="dashboard-card">
                <div class="card-header">
                    <h5>Getting Started with Vela</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="getting-started-item">
                                <i class="fas fa-play-circle text-primary mb-3"></i>
                                <h6>Start Time Tracking</h6>
                                <p>Use the Time Clock feature to track your daily work hours and attendance.</p>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="getting-started-item">
                                <i class="fas fa-user-cog text-success mb-3"></i>
                                <h6>Complete Your Profile</h6>
                                <p>Update your personal information and preferences in the Profile section.</p>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="getting-started-item">
                                <i class="fas fa-chart-line text-info mb-3"></i>
                                <h6>Monitor Your Performance</h6>
                                <p>Check your attendance history and work patterns in the Attendance section.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 