@model List<HRWebApp.Models.Admin.HolidayViewModel>

@{
    ViewData["Title"] = "Holiday Calendar";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Holiday Calendar @ViewBag.CurrentYear</h2>
        <div>
            <a asp-action="List" class="btn btn-outline-primary me-2">
                <i class="fas fa-list"></i> List View
            </a>
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> Add New Holiday
            </a>
        </div>
    </div>

    <div class="alert alert-info" role="alert">
        <strong>Holiday Calendar Overview</strong> - View all holidays organized by month. Use the List View button above for detailed management options.
    </div>

    <div class="row">
        @for (int month = 1; month <= 12; month++)
        {
            var monthName = new DateTime(ViewBag.CurrentYear, month, 1).ToString("MMMM");
            var monthHolidays = Model.Where(h => h.Date.Month == month).ToList();

            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">@monthName</h5>
                    </div>
                    <div class="card-body">
                        @if (monthHolidays.Any())
                        {
                            @foreach (var holiday in monthHolidays)
                            {
                                <div class="alert alert-success p-2 mb-2">
                                    <div class="d-flex justify-content-between align-items-start">
                                        <div>
                                            <strong>@holiday.Date.Day</strong> - @holiday.Description
                                            <br><small class="text-muted">@holiday.DayOfWeek</small>
                                        </div>
                                        <div class="btn-group btn-group-sm">
                                            <a asp-action="Edit" asp-route-id="@holiday.Id" class="btn btn-outline-primary btn-sm" title="Edit">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@holiday.Id" class="btn btn-outline-danger btn-sm" title="Delete">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <p class="text-muted text-center">No holidays this month</p>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div>