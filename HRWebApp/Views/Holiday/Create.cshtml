@model HRWebApp.Models.Admin.HolidayViewModel

@{
    ViewData["Title"] = "Add Holiday";
    Layout = "_DashboardLayout";
}

<div class="dashboard-content">
    <!-- Page Header -->
    <div class="welcome-header">
        <h1>Add Holiday</h1>
        <p class="text-muted">Create a new holiday for the company calendar</p>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="dashboard-card">
                <div class="card-header">
                    <h5>Holiday Details</h5>
                </div>
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group mb-3">
                        <label asp-for="Date" class="control-label">Holiday Date</label>
                        <input asp-for="Date" class="form-control" type="date" />
                        <span asp-validation-for="Date" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-4">
                        <label asp-for="Description" class="control-label">Holiday Name</label>
                        <input asp-for="Description" class="form-control" placeholder="e.g., New Year's Day, Christmas Day" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="form-actions">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-plus"></i> Add Holiday
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left"></i> Back to List
                        </a>
                    </div>
                </form>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="dashboard-card">
                <div class="card-header">
                    <h6>Guidelines</h6>
                </div>
                <div class="help-text">
                    <ul class="list-unstyled">
                        <li><i class="fas fa-info-circle text-primary"></i> Select the exact date of the holiday</li>
                        <li><i class="fas fa-info-circle text-primary"></i> Use clear, descriptive names</li>
                        <li><i class="fas fa-info-circle text-primary"></i> Holiday will be visible to all employees</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}