@model HRWebApp.Models.Admin.HolidayViewModel

@{
    ViewData["Title"] = "Delete Holiday";
}

<div class="container mt-4">
    <h2>Delete Holiday</h2>
    <div class="alert alert-danger">
        <h4>Are you sure you want to delete this holiday?</h4>
    </div>
    <div>
        <dl class="row">
            <dt class="col-sm-3">Date</dt>
            <dd class="col-sm-9">@Model.FormattedDate (@Model.DayOfWeek)</dd>

            <dt class="col-sm-3">Holiday Name</dt>
            <dd class="col-sm-9">@Model.Description</dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete Holiday" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </form>
    </div>
</div>