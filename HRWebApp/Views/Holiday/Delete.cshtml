@model HRWebApp.Models.Admin.HolidayViewModel

@{
    ViewData["Title"] = "Delete Holiday";
    Layout = "_DashboardLayout";
}

<div class="dashboard-content">
    <!-- Page Header -->
    <div class="welcome-header">
        <h1>Delete Holiday</h1>
        <p class="text-muted">Confirm holiday deletion</p>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="dashboard-card">
                <div class="alert alert-danger mb-4">
                    <h5><i class="fas fa-exclamation-triangle"></i> Confirm Deletion</h5>
                    <p class="mb-0">Are you sure you want to delete this holiday? This action cannot be undone.</p>
                </div>

                <div class="holiday-details">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="detail-item">
                                <label class="detail-label">Holiday Date</label>
                                <div class="detail-value">@Model.FormattedDate (@Model.DayOfWeek)</div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="detail-item">
                                <label class="detail-label">Holiday Name</label>
                                <div class="detail-value">@Model.Description</div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="form-actions mt-4">
                    <form asp-action="Delete" class="d-inline">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash"></i> Delete Holiday
                        </button>
                    </form>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left"></i> Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>