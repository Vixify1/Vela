@model List<HRWebApp.Models.Admin.HolidayViewModel>

@{
    ViewData["Title"] = "Holiday List";
    Layout = "_DashboardLayout";
}

<div class="dashboard-content">
    <!-- Page Header -->
    <div class="welcome-header">
        <h1>Holiday List</h1>
        <p class="text-muted">View and manage all company holidays</p>
    </div>

    <!-- Stats Cards -->
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="stat-card stat-card-primary">
                <div class="stat-icon">
                    <i class="fas fa-calendar-day"></i>
                </div>
                <div class="stat-content">
                    <h3>@Model.Count</h3>
                    <p>Total Holidays</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="stat-card stat-card-success">
                <div class="stat-icon">
                    <i class="fas fa-calendar-plus"></i>
                </div>
                <div class="stat-content">
                    <h3>@Model.Count(h => h.Date >= DateTime.Now.Date)</h3>
                    <p>Upcoming</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="stat-card stat-card-info">
                <div class="stat-icon">
                    <i class="fas fa-calendar-check"></i>
                </div>
                <div class="stat-content">
                    <h3>@Model.Count(h => h.Date.Year == DateTime.Now.Year)</h3>
                    <p>This Year</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Holiday List -->
    <div class="dashboard-card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <div>
                <h5>All Holidays</h5>
                <small class="text-muted">Complete list of company holidays</small>
            </div>
            <div class="btn-group" role="group">
                <a asp-action="Calendar" class="btn btn-outline-success">
                    <i class="fas fa-calendar"></i> Calendar View
                </a>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Add New Holiday
                </a>
            </div>
        </div>

        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Date</th>
                            <th>Day</th>
                            <th>Holiday Name</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var holiday in Model.OrderBy(h => h.Date))
                        {
                            <tr>
                                <td>
                                    <strong>@holiday.Date.ToString("MMM dd, yyyy")</strong>
                                </td>
                                <td>
                                    <span class="text-muted">@holiday.DayOfWeek</span>
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <i class="fas fa-star text-warning me-2"></i>
                                        @holiday.Description
                                    </div>
                                </td>
                                <td>
                                    @if (holiday.Date.Date == DateTime.Now.Date)
                                    {
                                        <span class="badge bg-primary">
                                            <i class="fas fa-calendar-day"></i> Today
                                        </span>
                                    }
                                    else if (holiday.Date >= DateTime.Now.Date)
                                    {
                                        <span class="badge bg-success">
                                            <i class="fas fa-calendar-plus"></i> Upcoming
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">
                                            <i class="fas fa-history"></i> Past
                                        </span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Edit" asp-route-id="@holiday.Id" class="btn btn-sm btn-outline-primary" title="Edit Holiday">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@holiday.Id" class="btn btn-sm btn-outline-danger" title="Delete Holiday">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <!-- Empty State -->
            <div class="text-center py-5">
                <div class="mb-4">
                    <i class="fas fa-calendar-times fa-3x text-muted"></i>
                </div>
                <h4>No Holidays Configured</h4>
                <p class="text-muted mb-4">Start by adding your first company holiday to the system.</p>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Add First Holiday
                </a>
            </div>
        }
    </div>
</div>