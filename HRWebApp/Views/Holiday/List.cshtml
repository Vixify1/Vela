@model List<HRWebApp.Models.Admin.HolidayViewModel>

@{
    ViewData["Title"] = "Holiday List";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Holiday Management</h2>
        <div>
            <a asp-action="Calendar" class="btn btn-outline-success me-2">
                <i class="fas fa-calendar"></i> Calendar View
            </a>
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> Add New Holiday
            </a>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Day</th>
                        <th>Description</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var holiday in Model)
                    {
                        <tr>
                            <td>@holiday.Date.ToString("MMM dd, yyyy")</td>
                            <td>@holiday.DayOfWeek</td>
                            <td>@holiday.Description</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@holiday.Id" class="btn btn-sm btn-primary">Edit</a>
                                <a asp-action="Delete" asp-route-id="@holiday.Id" class="btn btn-sm btn-danger">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            @if (!Model.Any())
            {
                <div class="alert alert-info text-center">
                    <h5>No holidays configured</h5>
                    <p>Start by adding your first holiday using the "Add New Holiday" button above.</p>
                </div>
            }
        </div>
    </div>
</div>