@model List<HRWebApp.Models.Admin.HolidayViewModel>

@{
    ViewData["Title"] = "Holidays";
}

<div class="container mt-4">
    <h2>Holiday Calendar Configuration</h2>
    <p>
        <a asp-action="Create" class="btn btn-primary">Add New Holiday</a>
        <a asp-action="Calendar" class="btn btn-info">View Calendar</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>Date</th>
                <th>Day</th>
                <th>Holiday Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.FormattedDate</td>
                    <td>@item.DayOfWeek</td>
                    <td>@item.Description</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>