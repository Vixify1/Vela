<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Vela HR Management System - A comprehensive HR solution for employee management, attendance tracking, and payroll processing." />
    <title>@ViewData["Title"] - Vela</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <!-- Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body class="landing-body">
    <!-- Minimal Header with just Vela brand -->
    <header class="landing-header">
        <div class="container-fluid">
            <div class="row">
                <div class="col">
                    <a class="vela-brand" asp-controller="Home" asp-action="Index">Vela</a>
                </div>
            </div>
        </div>
    </header>

    <main role="main">
        @RenderBody()
    </main>

    <!-- Landing Footer with Attribution -->
    <footer class="landing-footer">
        <div class="container">
            <div class="row">
                <div class="col-12 text-center">
                    <div class="footer-attribution">
                        <p class="mb-1">
                            <i class="fas fa-code text-primary"></i>
                            <strong>Vela HR Management System</strong>
                        </p>
                        <p class="developer-credit">
                            Developed by <strong>Uolter Ferhati</strong> | Personal Project
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>