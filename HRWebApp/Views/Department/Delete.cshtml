@model HRWebApp.Models.Admin.DepartmentViewModel

@{
    ViewData["Title"] = "Delete Department";
    Layout = "_DashboardLayout";
}

<div class="dashboard-content">
    <!-- Page Header -->
    <div class="welcome-header">
        <h1>Delete Department</h1>
        <p class="text-muted">Confirm deletion of department</p>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="dashboard-card">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-exclamation-triangle"></i> Confirm Deletion
                    </h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning" role="alert">
                        <h5 class="alert-heading">Warning!</h5>
                        <p>Are you sure you want to delete this department? This action cannot be undone.</p>
                        @if (Model.EmployeeCount > 0)
                        {
                            <hr>
                            <p class="mb-0 text-danger">
                                <strong>Note:</strong> This department has @Model.EmployeeCount employee(s). 
                                Please reassign employees before deleting.
                            </p>
                        }
                    </div>

                    <div class="department-details">
                        <div class="detail-item">
                            <strong>Department Name:</strong>
                            <span>@Model.Name</span>
                        </div>
                        <div class="detail-item">
                            <strong>Number of Employees:</strong>
                            <span class="badge bg-light text-dark">@Model.EmployeeCount employees</span>
                        </div>
                    </div>

                    <hr>

                    <div class="d-flex gap-2 justify-content-end">
                        @if (Model.EmployeeCount == 0)
                        {
                            <form asp-action="Delete" method="post" class="d-inline">
                                <input type="hidden" asp-for="Id" />
                                <button type="submit" class="btn btn-danger">
                                    <i class="fas fa-trash"></i> Yes, Delete Department
                                </button>
                            </form>
                        }
                        else
                        {
                            <button class="btn btn-danger" disabled>
                                <i class="fas fa-ban"></i> Cannot Delete (Has Employees)
                            </button>
                        }
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-times"></i> Cancel
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>