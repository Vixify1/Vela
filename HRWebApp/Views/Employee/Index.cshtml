@model List<HRWebApp.Models.Admin.EmployeeViewModel>

@{
    ViewData["Title"] = "Employees";
    Layout = "_DashboardLayout";
}

<div class="dashboard-content">
    <!-- Page Header -->
    <div class="welcome-header">
        <h1>Employee Management</h1>
        <p class="text-muted">Manage employee records, departments, and hourly rates</p>
    </div>

    <!-- Stats Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="stat-card stat-card-primary">
                <div class="stat-icon">
                    <i class="fas fa-users"></i>
                </div>
                <div class="stat-content">
                    <h3>@Model.Count</h3>
                    <p>Total Employees</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stat-card stat-card-success">
                <div class="stat-icon">
                    <i class="fas fa-user-check"></i>
                </div>
                <div class="stat-content">
                    <h3>@Model.Count(e => e.HourlyRate > 0)</h3>
                    <p>Active Employees</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stat-card stat-card-info">
                <div class="stat-icon">
                    <i class="fas fa-building"></i>
                </div>
                <div class="stat-content">
                    <h3>@Model.Select(e => e.DepartmentName).Distinct().Count()</h3>
                    <p>Departments</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stat-card stat-card-warning">
                <div class="stat-icon">
                    <i class="fas fa-coins"></i>
                </div>
                <div class="stat-content">
                    <h3>@(Model.Any() ? Model.Average(e => e.HourlyRate).ToString("N0") : "0") LEK</h3>
                    <p>Avg. Hourly Rate</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Employee Management -->
    <div class="dashboard-card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5>Employee Directory</h5>
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> Add New Employee
            </a>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Department</th>
                                <th>Hourly Rate</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <div class="employee-info">
                                            <i class="fas fa-user-circle text-muted me-2"></i>
                                            <strong>@item.FullName</strong>
                                        </div>
                                    </td>
                                    <td>@item.Email</td>
                                    <td>
                                        <span class="badge bg-light text-dark">@item.DepartmentName</span>
                                    </td>
                                    <td>
                                        <strong>@item.HourlyRate.ToString("N0") LEK</strong>
                                    </td>
                                    <td>
                                        @if (item.HourlyRate > 0)
                                        {
                                            <span class="badge bg-success">Active</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning">Pending Setup</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group">
                                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">
                                                <i class="fas fa-edit"></i> Edit
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                                                <i class="fas fa-trash"></i> Delete
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-4">
                    <i class="fas fa-users fa-3x text-muted mb-3"></i>
                    <h5>No Employees Found</h5>
                    <p class="text-muted">Start by adding your first employee to the system.</p>
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Add First Employee
                    </a>
                </div>
            }
        </div>
    </div>
</div>