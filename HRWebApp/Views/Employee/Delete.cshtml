@model HRWebApp.Models.Admin.EmployeeViewModel

@{
    ViewData["Title"] = "Delete Employee";
}

<div class="container mt-4">
    <h2>Delete Employee</h2>
    <div class="alert alert-danger">
        <h4>Are you sure you want to delete this employee?</h4>
        <p><strong>Warning:</strong> This will permanently delete both the employee record and their login account.</p>
    </div>
    <div>
        <dl class="row">
            <dt class="col-sm-3">Name</dt>
            <dd class="col-sm-9">@Model.FullName</dd>

            <dt class="col-sm-3">Email</dt>
            <dd class="col-sm-9">@Model.Email</dd>

            <dt class="col-sm-3">Department</dt>
            <dd class="col-sm-9">@Model.DepartmentName</dd>

            <dt class="col-sm-3">Hourly Rate</dt>
            <dd class="col-sm-9">$@Model.HourlyRate.ToString("F2")</dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete Employee" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </form>
    </div>
</div>