@model HRWebApp.Models.Admin.EmployeeViewModel

@{
    ViewData["Title"] = "Delete Employee";
    Layout = "_DashboardLayout";
}

<div class="dashboard-content">
    <!-- Page Header -->
    <div class="welcome-header">
        <h1>Delete Employee</h1>
        <p class="text-muted">Confirm deletion of employee record</p>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="dashboard-card">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-exclamation-triangle"></i> Confirm Deletion
                    </h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning" role="alert">
                        <h5 class="alert-heading">Warning!</h5>
                        <p>Are you sure you want to delete this employee? This action cannot be undone.</p>
                    </div>

                    <div class="employee-details">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="detail-item">
                                    <strong>Full Name:</strong>
                                    <span>@Model.FullName</span>
                                </div>
                                <div class="detail-item">
                                    <strong>Email:</strong>
                                    <span>@Model.Email</span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="detail-item">
                                    <strong>Department:</strong>
                                    <span>@Model.DepartmentName</span>
                                </div>
                                <div class="detail-item">
                                    <strong>Hourly Rate:</strong>
                                    <span>@Model.HourlyRate.ToString("N0") LEK</span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <hr>

                    <div class="d-flex gap-2 justify-content-end">
                        <form asp-action="Delete" method="post" class="d-inline">
                            <input type="hidden" asp-for="Id" />
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash"></i> Yes, Delete Employee
                            </button>
                        </form>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-times"></i> Cancel
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>