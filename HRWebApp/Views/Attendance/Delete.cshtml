@model HRWebApp.Models.Admin.AttendanceLogEditViewModel

@{
    ViewData["Title"] = "Delete Attendance Record";
}

<div class="container mt-4">
    <h2>Delete Attendance Record</h2>
    <div class="alert alert-danger">
        <h4>Are you sure you want to delete this attendance record?</h4>
    </div>
    <div>
        <dl class="row">
            <dt class="col-sm-3">Employee</dt>
            <dd class="col-sm-9">@Model.EmployeeName</dd>

            <dt class="col-sm-3">Date</dt>
            <dd class="col-sm-9">@Model.Date.ToString("dddd, MMMM dd, yyyy")</dd>

            <dt class="col-sm-3">Clock In</dt>
            <dd class="col-sm-9">@Model.ClockInTime.ToString(@"hh\:mm")</dd>

            <dt class="col-sm-3">Clock Out</dt>
            <dd class="col-sm-9">@(Model.ClockOutTime?.ToString(@"hh\:mm") ?? "Not clocked out")</dd>

            @if (Model.WorkedHours.HasValue)
            {
                <dt class="col-sm-3">Hours Worked</dt>
                <dd class="col-sm-9">@Model.WorkedHours.Value.ToString("F2") hours</dd>
            }
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete Record" class="btn btn-danger" />
            <a asp-action="Index" asp-route-employeeId="@Model.EmployeeId" asp-route-selectedMonth="@Model.Date.Month" asp-route-selectedYear="@Model.Date.Year" class="btn btn-secondary">Back to List</a>
        </form>
    </div>
</div>